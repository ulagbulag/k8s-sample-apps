---
apiVersion: v1
kind: Namespace
metadata:
  annotations:
    scheduler.alpha.kubernetes.io/node-selector: "dash.ulagbulag.io/shared.user={{ metadata.node_label }}"
  labels:
    dash.ulagbulag.io/shared.user: "{{ metadata.node_label }}"
  name: "{{ metadata.prefix }}-{{ team.name }}"
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: "{{ metadata.prefix }}-{{ team.name }}"
  namespace: "{{ metadata.prefix }}-{{ team.name }}"
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: admin
  namespace: "{{ metadata.prefix }}-{{ team.name }}"
rules:
  # TODO: limits user boundary
  - apiGroups:
      - ""
      - '*'
    resources:
      - '*'
    verbs:
      - '*'
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: "{{ metadata.prefix }}-{{ team.name }}"
  namespace: "{{ metadata.prefix }}-{{ team.name }}"
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: admin
subjects:
- apiGroup: rbac.authorization.k8s.io
  kind: User
  name: "{{ metadata.prefix }}-{{ team.name }}"
